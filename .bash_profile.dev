# .bash_profile.dev — Vulkan/GLES C++ Dev Container (LunarG default)
# Shows an expanded banner with ALL major toolchains at login (TTY)

[ -f "$HOME/.bashrc" ] && . "$HOME/.bashrc"

: "${RED:=\033[0;31m}"
: "${GREEN:=\033[0;32m}"
: "${YELLOW:=\033[1;33m}"
: "${BLUE:=\033[1;34m}"
: "${CYAN:=\033[1;36m}"
: "${MAGENTA:=\033[1;35m}"
: "${BOLD:=\033[1m}"
: "${DIM:=\033[2m}"
: "${RESET:=\033[0m}"

if [ -t 1 ]; then
  _now="$(date '+%Y-%m-%d %H:%M:%S')"
  _host="$(command -v hostname >/dev/null 2>&1 && hostname || echo unknown)"
  _user="$(id -un)"
  _uid="$(id -u)"
  _gid="$(id -g)"
  _sh="${SHELL##*/}"
  _ws="/workspace"
  _home="$HOME"

  # line width + padding helper
  _w=100
  _pad() { local s="$1" fill; local len=${#s}; if [ "$len" -lt "$_w" ]; then fill=$(printf '%*s' "$(( _w - len ))" ''); printf "%s%s" "$s" "$fill"; else printf "%s" "$s"; fi; }

  echo -e "\n${CYAN}----------------------------------------------------------------------------------------------------${RESET}"
  echo -e "$(_pad " ${BOLD}Vulkan/GLES C++ Dev Container — LunarG SDK default (target runtime: Vulkan 1.1)${RESET}  ${DIM}${_now}${RESET}")"
  echo -e "${CYAN}----------------------------------------------------------------------------------------------------${RESET}"
  echo -e "$(_pad " ${YELLOW}User${RESET}: ${BOLD}${_user}${RESET} (uid=${_uid} gid=${_gid})   ${YELLOW}Host${RESET}: ${BOLD}${_host}${RESET}   ${YELLOW}Shell${RESET}: ${_sh}")"
  echo -e "$(_pad " ${YELLOW}Workspace${RESET}: ${_ws}   ${YELLOW}Home${RESET}: ${_home}")"
  echo

  # Quick env summary
  echo -e " ${YELLOW}VULKAN_SDK:${RESET} ${BOLD}${VULKAN_SDK:-<unset>}${RESET}"
  echo -e " ${YELLOW}ANDROID_SDK_ROOT:${RESET} ${BOLD}${ANDROID_SDK_ROOT:-<unset>}${RESET}   ${YELLOW}ANDROID_NDK_ROOT:${RESET} ${BOLD}${ANDROID_NDK_ROOT:-<unset>}${RESET}"
  echo -e " ${YELLOW}DISPLAY:${RESET} ${BOLD}${DISPLAY:-<unset>}${RESET}   ${YELLOW}WAYLAND_DISPLAY:${RESET} ${BOLD}${WAYLAND_DISPLAY:-<unset>}${RESET}"
  echo

  # Full inventory
  devinfo
fi
