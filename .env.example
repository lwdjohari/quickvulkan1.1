# ===================================================================
# quickvulkanv1 â€” Vulkan + GLES + Android C++ Dev Container (.env.example)
# Copy this file to `.env` and edit as needed before running:
#   docker compose up -d
# ===================================================================

# -------------------------------------------------------------------
# Basic service / image
# -------------------------------------------------------------------
IMAGE_NAME=quickvulkanv1
CONTAINER_NAME=quickvulkanv1-dev

# -------------------------------------------------------------------
# SSH & user management
# -------------------------------------------------------------------
SSHD_ENABLED=true
SSHD_PASSWORD_AUTH=false
ROOT_PASSWORD=CHANGE_ME_ROOT
CREATE_USER=true
USER_NAME=developer
USER_UID=1000
USER_GID=1000
USER_PASSWORD=CHANGE_ME_USER
USER_SUDO=true
TAKE_WORKSPACE=true

# -------------------------------------------------------------------
# Vulkan SDK (default: LunarG 1.3.296.0)
# -------------------------------------------------------------------
VULKAN_SDK_VERSION=1.3.296.0
USE_DISTRO_VULKAN=false

# -------------------------------------------------------------------
# Android SDK / NDK versions
# -------------------------------------------------------------------
ANDROID_SDK_VERSION=11076708_latest   # commandlinetools r12+
ANDROID_PLATFORM=android-34
ANDROID_BUILD_TOOLS=34.0.0
ANDROID_NDK_VERSION=r26c

# -------------------------------------------------------------------
# Java toolchain
# -------------------------------------------------------------------
JAVA_HOME=/usr/lib/jvm/java-17-openjdk-amd64

# -------------------------------------------------------------------
# Ports mapping
# -------------------------------------------------------------------
SSH_PORT=7000
APP_PORTS=7001-7010

# -------------------------------------------------------------------
# Volumes (host paths)
# -------------------------------------------------------------------
WORKSPACE_PATH=/mnt/data/dev-volumes/quickvulkanv1/workspace
SSH_PATH=/mnt/data/dev-volumes/quickvulkanv1/.ssh
HOME_PATH=/mnt/data/dev-volumes/quickvulkanv1/home
CCACHE_PATH=/mnt/data/dev-volumes/quickvulkanv1/ccache

